{{!< default}}

<h1>Planning</h1>
<table border="1">
    {{#each grid}}
        <tr>
            {{#each this}}
                {{#if this.header}}
                    <th>
                        <h2>{{this.name}}</h2>
                    </th>
                {{else}}
                    <td>
                        <h2>{{this.name}}</h2>
                        {{#each this.projects}}
                            <table border="1">
                                <tr>
                                    <th>Project Name</th>
                                    <td>{{this.projectName}}</td>
                                </tr>
                                <tr>
                                    <th>Participants</th>
                                    <td>{{this.participants}}</td>
                                </tr>
                                <tr>
                                    <th>Link</th>
                                    <td>{{this.link}}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{this.description}}</td>
                                </tr>
                            </table>
                        {{/each}}
                    </td>
                {{/if}}
            {{/each}}
        </tr>
    {{/each}}
</table>

    
